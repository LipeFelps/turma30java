programa
{
	inteiro ano_atual, ano_nasc, idade
	funcao inicio()
	{
		escreva(" Em que ano nós estamos? ")
		leia(ano_atual)
		escreva(" Em que ano eu nasci ? ")
		leia(ano_nasc)
		idade = ano_atual - ano_nasc
		escreva( " Ah, minha idade é ", idade)
		se (idade >= 18)
		escreva("\n", " Você é de maior ")
		senao
		escreva("\n", " Você é de menor ")
		
		
		
		
		
	}
}
